{
	"compilerOptions": {
		"strict": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"inlineSources": true,
		"inlineSourceMap": true,
		"allowJs": true,
		"target": "ES5",
		"lib": ["DOM", "ES5", "ES2015.Collection", "ES2015.Promise"],
		// "skipLibCheck": true,
		"declaration": true,
		"outDir": "lib",
		"rootDir": "src",
		"noImplicitAny": true,
		"strictNullChecks": false,
		"strictPropertyInitialization": false,
		"baseUrl": "./",
		"paths": {
			// https://github.com/pixijs/pixi.js/issues/7305
			"mini-signals": ["node_modules/resource-loader/typings/mini-signals.d.ts"]
		},
		"typeRoots": ["node_modules/@types"],
		"types": [],
		"resolveJsonModule": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": []
}
